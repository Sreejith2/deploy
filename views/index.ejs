<%- include('header') -%>
    <body>
        <div class="box" id="heading">
            <h1><%=listTitle %></h1>
        </div>
        <div class="box">
            <%for(let i=0;i<newItems.length;i++){%>
                    <div class="item">
                        <input type="checkbox">
                        <p><%= newItems[i] %></p>
                    </div>
            <%}%>
            <form class="item" action="/" method="post">
                <input type="text" name="item" placeholder="Add item" autocomplete="off">
                <button name="list" type="submit" value="<%= list_name %>">+</button>
            </form>
        </div>
    </body>
<%- include('footer') -%>